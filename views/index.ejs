<!DOCTYPE html>
<html lang="en" class="outline dragscroll">
  <head>
    <meta charset="UTF-8" />
    <title>Socket.IO MineSweeper</title>
    
    <link rel="stylesheet" href="animate.css" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="initial">
      <input type="text" name="namername" autofocus="true" maxlength="10" placeholder="Type Your NickName">
      <p>Press ENTER to join the game.</p>
    </div>
    <div class="titleWrapper">
      <h3 class="title">Sweeper</h3>
    </div>
    <div class="GameBoard " >
      <% for(var i=0;i<32;i++){ %>
        <div class="row">
          <%for(var j=0;j<60;j++){%> 
            <div class="cell" id=<%= j+","+i %>> </div>
          <%}%>
        </div>
      <%}%>
    </div>
    <div class="InfoBoard">
        <div class="row">
            1. Null
        </div> 
    </div>
    <div class="debugLog">
      <div class="logRow"> 
    </div>
    </div>
    <script>
      function addv(str, opt){
        var para = document.createElement("div");
        var sel = document.getElementsByClassName("logRow")[0]
        para.id = opt==0 ? "negative":"positive";
        para.className = "animated slideInUp"
        para.appendChild(document.createTextNode(str));  
        
        sel.appendChild(para);
        var k = sel.lastChild;
        setTimeout(function () {
           k.className = "animated zoomOut"
           setTimeout(function () {
              sel.removeChild(para); 
            }, 500); 
        }, 1000); 
      }
    </script>
    <script src="/dragscroll.js"></script>
    <script src="/disablescroll.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/main.js"></script>
  </body>
</html>
